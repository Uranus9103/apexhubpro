local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Tạo GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 180, 0, 60)
button.Position = UDim2.new(1, -200, 1, -120)
button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Text = "Biến Khủng Lồ"
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18
button.Parent = screenGui

local giant = false

local function setGiant(state)
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")

    local height = humanoid:FindFirstChild("BodyHeightScale")
    local width = humanoid:FindFirstChild("BodyWidthScale")
    local depth = humanoid:FindFirstChild("BodyDepthScale")

    if height and width and depth then
        if state then
            height.Value = 5
            width.Value = 5
            depth.Value = 5
            button.Text = "Thu Nhỏ"
        else
            height.Value = 1
            width.Value = 1
            depth.Value = 1
            button.Text = "Biến Khủng Lồ"
        end
    end
end

button.MouseButton1Click:Connect(function()
    giant = not giant
    setGiant(giant)
end)

-- Khi respawn giữ trạng thái
player.CharacterAdded:Connect(function()
    if giant then
        task.wait(1) -- đợi model load
        setGiant(true)
    end
end)
