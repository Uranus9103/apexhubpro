-- Script Hub v·ªõi giao di·ªán chuy√™n nghi·ªáp - CENTERED
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local Button1 = Instance.new("TextButton")
local Button2 = Instance.new("TextButton")
local UIGradient = Instance.new("UIGradient")
local UICorner = Instance.new("UICorner")
local UIStroke = Instance.new("UIStroke")

-- T·∫°o GUI
ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
MainFrame.Size = UDim2.new(0, 300, 0, 200)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0) -- Ch√≠nh gi·ªØa m√†n h√¨nh

-- Gradient background
UIGradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0.00, Color3.fromRGB(35, 35, 50)),
    ColorSequenceKeypoint.new(1.00, Color3.fromRGB(25, 25, 35))
})
UIGradient.Parent = MainFrame

-- Corner radius
UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = MainFrame

-- Border stroke
UIStroke.Thickness = 2
UIStroke.Color = Color3.fromRGB(65, 65, 90)
UIStroke.Parent = MainFrame

-- Ti√™u ƒë·ªÅ
Title.Name = "Title"
Title.Parent = MainFrame
