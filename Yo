--// Teleport + Keep Tool Function Script
-- ƒê·∫∑t trong StarterPlayerScripts

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- T·∫°o GUI
local gui = Instance.new("ScreenGui")
gui.Name = "KeepToolGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0,150,0,50)
button.Position = UDim2.new(0.5,-75,0.8,0)
button.BackgroundColor3 = Color3.fromRGB(0,200,100)
button.Text = "üîí Gi·ªØ Tool"
button.Font = Enum.Font.SourceSansBold
button.TextSize = 22
button.TextColor3 = Color3.new(1,1,1)
button.Parent = gui

-- Tr·∫°ng th√°i gi·ªØ
local holding = false

-- Khi b·∫•m n√∫t
button.MouseButton1Click:Connect(function()
	holding = not holding
	if holding then
		button.Text = "‚úÖ ƒêang gi·ªØ"
		
		-- Anti ch·∫øt
		local char = player.Character
		if char then
			local ff = Instance.new("ForceField")
			ff.Visible = false
			ff.Parent = char
			game:GetService("Debris"):AddItem(ff, 5) -- ForceField 5 gi√¢y
		end
	else
		button.Text = "üîí Gi·ªØ Tool"
	end
end)

-- V√≤ng l·∫∑p gi·ªØ tool
task.spawn(function()
	while true do
		task.wait(0.2)
		if holding then
			local char = player.Character
			if char then
				local tool = char:FindFirstChildOfClass("Tool")
				if tool then
					-- N·∫øu tool c√≥ RemoteEvent ri√™ng ƒë·ªÉ b·∫Øn / d√πng
					if tool:FindFirstChild("ActivateEvent") then
						tool.ActivateEvent:FireServer()
					end
					-- N·∫øu tool d√πng ch·ª©c nƒÉng m·∫∑c ƒë·ªãnh Roblox
					if tool:FindFirstChild("Activate") then
						pcall(function() tool:Activate() end)
					end
				end
			end
		end
	end
end)
