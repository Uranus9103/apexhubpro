--// Noclip + AntiDie Script
-- ƒê·∫∑t trong StarterPlayerScripts

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "NoclipGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0,150,0,50)
button.Position = UDim2.new(1,-160,0,10) -- g√≥c tr√™n ph·∫£i (c√°ch m√©p ph·∫£i 10px, tr√™n 10px)
button.AnchorPoint = Vector2.new(0,0)
button.BackgroundColor3 = Color3.fromRGB(200,100,100)
button.Text = "üö´ Noclip: OFF"
button.Font = Enum.Font.SourceSansBold
button.TextSize = 22
button.TextColor3 = Color3.new(1,1,1)
button.Parent = gui

-- Tr·∫°ng th√°i
local noclip = false
local connection

-- H√†m b·∫≠t/t·∫Øt noclip
local function setNoclip(state)
	noclip = state
	if noclip then
		button.Text = "‚úÖ Noclip: ON"
		button.BackgroundColor3 = Color3.fromRGB(100,200,100)

		-- ForceField ch·ªëng ch·∫øt
		local char = player.Character
		if char then
			local ff = Instance.new("ForceField")
			ff.Visible = false
			ff.Parent = char
			game:GetService("Debris"):AddItem(ff, 999999) -- t·ªìn t·∫°i r·∫•t l√¢u
		end

		-- v√≤ng l·∫∑p t·∫Øt CanCollide ƒë·ªÉ xuy√™n t∆∞·ªùng
		connection = RunService.Stepped:Connect(function()
			local char = player.Character
			if char then
				for _, part in pairs(char:GetDescendants()) do
					if part:IsA("BasePart") and part.CanCollide then
						part.CanCollide = false
					end
				end
			end
		end)
	else
		button.Text = "üö´ Noclip: OFF"
		button.BackgroundColor3 = Color3.fromRGB(200,100,100)
		if connection then
			connection:Disconnect()
			connection = nil
		end
	end
end

-- S·ª± ki·ªán b·∫•m n√∫t
button.MouseButton1Click:Connect(function()
	setNoclip(not noclip)
end)

-- Reset th√¨ v·∫´n ho·∫°t ƒë·ªông
player.CharacterAdded:Connect(function()
	if noclip then
		task.wait(1)
		setNoclip(true)
	end
end)
