-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- GUI setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "CameraESPGui"
ScreenGui.Parent = PlayerGui

-- Nút bật/tắt ESP
local ToggleButton = Instance.new("TextButton")
ToggleButton.Size = UDim2.new(0,150,0,50)
ToggleButton.Position = UDim2.new(0,20,0,20)
ToggleButton.Text = "Bật ESP"
ToggleButton.BackgroundColor3 = Color3.fromRGB(0,170,255)
ToggleButton.TextColor3 = Color3.new(1,1,1)
ToggleButton.Parent = ScreenGui

-- Frame danh sách người chơi
local PlayerFrame = Instance.new("Frame")
PlayerFrame.Size = UDim2.new(0,200,0,300)
PlayerFrame.Position = UDim2.new(0,20,0,80)
PlayerFrame.BackgroundColor3 = Color3.fromRGB(30,30,30)
PlayerFrame.Visible = false
PlayerFrame.Parent = ScreenGui

-- ScrollFrame chứa nút người chơi
local Scroll = Instance.new("ScrollingFrame")
Scroll.Size = UDim2.new(1,0,1,0)
Scroll.Position = UDim2.new(0,0,0,0)
Scroll.CanvasSize = UDim2.new(0,0,0,0)
Scroll.ScrollBarThickness = 6
Scroll.Parent = PlayerFrame

-- Layout để các nút xếp gọn
local Layout = Instance.new("UIListLayout")
Layout.Padding = UDim.new(0,5)
Layout.FillDirection = Enum.FillDirection.Vertical
Layout.SortOrder = Enum.SortOrder.LayoutOrder
Layout.Parent = Scroll

-- Biến trạng thái
local ESPEnabled = false
local ViewingPlayer = nil

-- Nút tải lại danh sách
local ReloadButton = Instance.new("TextButton")
ReloadButton.Size = UDim2.new(0,80,0,30)
ReloadButton.Position = UDim2.new(0,110,0,20)
ReloadButton.Text = "Tải lại"
ReloadButton.BackgroundColor3 = Color3.fromRGB(255,170,0)
ReloadButton.TextColor3 = Color3.new(1,1,1)
ReloadButton.Visible = false
ReloadButton.Parent = ScreenGui

-- Hàm cập nhật danh sách người chơi
local function UpdatePlayerList()
    Scroll:ClearAllChildren()
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            local btn = Instance.new("TextButton")
            btn.Size = UDim2.new(1, -10, 0, 40) -- trừ padding để vừa khung
            btn.Position = UDim2.new(0,5,0,0)
            btn.Text = player.Name
            btn.BackgroundColor3 = Color3.fromRGB(50,50,50)
            btn.TextColor3 = Color3.new(1,1,1)
            btn.Parent = Scroll

            btn.MouseButton1Click:Connect(function()
                ViewingPlayer = player
            end)
        end
    end
    -- Cập nhật chiều cao CanvasSize để ScrollFrame cuộn được
    Scroll.CanvasSize = UDim2.new(0,0,0,Layout.AbsoluteContentSize.Y + 10)
end

-- Bật/tắt ESP
ToggleButton.MouseButton1Click:Connect(function()
    ESPEnabled = not ESPEnabled
    PlayerFrame.Visible = ESPEnabled
    ReloadButton.Visible = ESPEnabled
    if ESPEnabled then
        ToggleButton.Text = "Tắt ESP"
        UpdatePlayerList()
    else
        ToggleButton.Text = "Bật ESP"
        ViewingPlayer = nil
        workspace.CurrentCamera.CameraType = Enum.CameraType.Custom
        workspace.CurrentCamera.CameraSubject = LocalPlayer.Character:FindFirstChild("Humanoid") or LocalPlayer.Character:FindFirstChildWhichIsA("Humanoid")
    end
end)

-- Nút tải lại
ReloadButton.MouseButton1Click:Connect(UpdatePlayerList)

-- Tự động cập nhật khi người vào/ra server
Players.PlayerAdded:Connect(function()
    if ESPEnabled then UpdatePlayerList() end
end)
Players.PlayerRemoving:Connect(function(playerLeaving)
    if ESPEnabled then 
        if ViewingPlayer == playerLeaving then
            ViewingPlayer = nil
        end
        UpdatePlayerList() 
    end
end)

-- Camera theo dõi
RunService.RenderStepped:Connect(function()
    if ESPEnabled and ViewingPlayer and ViewingPlayer.Character and ViewingPlayer.Character:FindFirstChild("HumanoidRootPart") then
        workspace.CurrentCamera.CameraType = Enum.CameraType.Scriptable
        workspace.CurrentCamera.CFrame = ViewingPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(0,2,5)
    elseif not ESPEnabled then
        workspace.CurrentCamera.CameraType = Enum.CameraType.Custom
    end
end)
