confirmBtn.TextColor3 = Color3.new(1,1,1)
confirmBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
Instance.new("UICorner", confirmBtn).CornerRadius = UDim.new(0, 8)

-- Hover ƒë·ªïi m√†u
confirmBtn.MouseEnter:Connect(function()
	confirmBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
end)
confirmBtn.MouseLeave:Connect(function()
	confirmBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
end)

-- N√∫t Get Key (b√™n ph·∫£i)
local getKeyBtn = Instance.new("TextButton", frame)
getKeyBtn.Size = UDim2.new(0.42, 0, 0, 38)
getKeyBtn.Position = UDim2.new(0.53, 0, 0.75, 0)
getKeyBtn.Text = "üåê Get Key"
getKeyBtn.Font = Enum.Font.GothamBold
getKeyBtn.TextSize = 18
getKeyBtn.TextColor3 = Color3.new(1,1,1)
getKeyBtn.BackgroundColor3 = Color3.fromRGB(0, 85, 170)
Instance.new("UICorner", getKeyBtn).CornerRadius = UDim.new(0, 8)

getKeyBtn.MouseEnter:Connect(function()
	getKeyBtn.BackgroundColor3 = Color3.fromRGB(0, 110, 200)
end)
getKeyBtn.MouseLeave:Connect(function()
	getKeyBtn.BackgroundColor3 = Color3.fromRGB(0, 85, 170)
end)

--== Ch·ª©c nƒÉng n√∫t Get Key ==--
getKeyBtn.MouseButton1Click:Connect(function()
	setclipboard(KeyLink)
	game:GetService("StarterGui"):SetCore("SendNotification",{
		Title = "Th√¥ng b√°o",
		Text = "‚úÖ ƒê√£ copy link Get Key v√†o clipboard!",
		Duration = 4
	})
end)

--== X·ª≠ l√Ω x√°c nh·∫≠n key ==--
confirmBtn.MouseButton1Click:Connect(function()
	if box.Text == CorrectKey then
		frame:Destroy()

		-- N√∫t ch√≠nh
		local btn = Instance.new("TextButton", gui)
		btn.Size = UDim2.new(0, 220, 0, 65)
		btn.Position = UDim2.new(0.5, -110, 0.5, -32)
		btn.Text = "üöÄ Ch·∫°y Script"
		btn.Font = Enum.Font.GothamBold
		btn.TextSize = 22
		btn.TextColor3 = Color3.fromRGB(255, 255, 255)
		Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 15)

		local stroke2 = Instance.new("UIStroke", btn)
		stroke2.Thickness = 3

		-- Hi·ªáu ·ª©ng c·∫ßu v·ªìng + vi·ªÅn ƒë·ªông + ƒë·ªï b√≥ng
		local shadowBtn = Instance.new("ImageLabel", btn)
		shadowBtn.AnchorPoint = Vector2.new(0.5, 0.5)
		shadowBtn.Position = UDim2.new(0.5, 0, 0.5, 4)
		shadowBtn.Size = UDim2.new(1.1, 0, 1.3, 0)
		shadowBtn.BackgroundTransparency = 1
		shadowBtn.Image = "rbxassetid://1316045217"
		shadowBtn.ImageColor3 = Color3.fromRGB(0, 0, 0)
		shadowBtn.ImageTransparency = 0.5
		shadowBtn.ZIndex = -1

		task.spawn(function()
			local hue = 0
			while task.wait() do
				hue = (hue + 1) % 360
				btn.BackgroundColor3 = Color3.fromHSV(hue/360, 0.8, 1)
				stroke2.Color = Color3.fromHSV((hue+180)%360/360, 1, 1)
			end
		end)

		btn.MouseButton1Click:Connect(function()
			btn:Destroy()
			loadstring(game:HttpGet("https://raw.githubusercontent.com/gumanba/Scripts/main/BuildAPlane"))()
		end)
	else
		game:GetService("StarterGui"):SetCore("SendNotification",{
			Title = "‚ùå Sai Key",
			Text = "Vui l√≤ng nh·∫≠p l·∫°i!",
			Duration = 3
		})
	end
end)
